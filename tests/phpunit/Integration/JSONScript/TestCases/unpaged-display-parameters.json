{
	"description": "unpaged display parameters",
	"setup": [
		{
			"namespace": "SMW_NS_PROPERTY",
			"page": "SomeText",
			"contents": "[[Has type::Text]]"
		},
		{
			"namespace": "NS_CATEGORY",
			"page": "Category with unpaged display parameters",
			"contents": "{{#drilldowninfo: display parameters=format=list;unpaged=true}}"
		},
		{
			"namespace": "NS_CATEGORY",
			"page": "Category without unpaged display parameters",
			"contents": "{{#drilldowninfo: display parameters=format=list}}"
		},
		{
			"page": "Page1",
			"contents": "[[Category:Category with unpaged display parameters]][[Category:Category without unpaged display parameters]]"
		},
		{
			"page": "Page2",
			"contents": "[[Category:Category with unpaged display parameters]][[Category:Category without unpaged display parameters]]"
		}
	],
	"tests": [
		{
			"type": "special",
			"about": "all pages are shown for unpaged display parameters",
			"special-page": {
				"page": "BrowseData",
				"query-parameters": "Category with unpaged display parameters",
				"request-parameters": {
					"limit": 1
				}
			},
			"assert-output": {
				"to-contain": [
					"<div class=\"drilldown-results-output drilldown-results-output-unpaged\">",
					"<a href=\"/index.php/Page2\" title=\"Page2\">Page2</a>"
				],
				"not-contain": [
					"<div class=\"drilldown-results-output drilldown-results-output-paged\">"
				]
			}
		},
		{
			"type": "special",
			"about": "a limited number of pages is shown for not unpaged display parameters",
			"special-page": {
				"page": "BrowseData",
				"query-parameters": "Category without unpaged display parameters",
				"request-parameters": {
					"limit": 1
				}
			},
			"assert-output": {
				"to-contain": [
					"<div class=\"drilldown-results-output drilldown-results-output-paged\">"
				],
				"not-contain": [
					"<div class=\"drilldown-results-output drilldown-results-output-unpaged\">",
					"<a href=\"/index.php/Page2\" title=\"Page2\">Page2</a>"
				]
			}
		}
	],
	"settings": {
		"wgLang": "en"
	},
	"meta": {
		"version": "2",
		"is-incomplete": false,
		"debug": false
	}
}
